% start by resetting synthesizer



reset

%setsingle 0 0 0 uvfreq 0 0

setsteps 0 uvtime/35 0 uvtime
amplin 0 0 uvtime 100 100
freqgauss 0 0 uvtime uvtime/2 -1 uvfreqStart uvfreqMin 1 0
%freqlin 0 0 uvtime uvfreqStart uvfreqStart 1 0


setsteps 0 uvtime/35 uvtime 2*uvtime
amplin 0 uvtime 2*uvtime 100 100
freqgauss 0 uvtime 2*uvtime uvtime/2 1 uvfreqMin uvfreqStart 0 0 
%freqlin 0 uvtime 2*uvtime uvfreqStart uvfreqStart 1 0

%setsingle 0 clockPov2+uvtime 0 uvfreq 0 0


program 0


%setsteps 1 rbtime/15 0 rbtime

%ampgauss 1 0 rbtime rbtime/2.5 1 0 80 

%freqlin 1 0 rbtime rbfreq rbfreq  1 0


%setsteps 1 rbtime/15 rbtime 2*rbtime

%ampgauss 1 rbtime 2*rbtime rbtime/2.5 -1 80 0

%freqlin 1 rbtime 2*rbtime rbfreq rbfreq 0 0

%setsingle 1 2*rbtime 0 100 0 0 
setsingle 1 0 100 5 0 0 

program 1



%setsingle 2 0 100 90 0 0 

%setsingle 2 100*1000 100 0 0 0 

setsteps 2 uvtime/15 0 uvtime

ampgauss 2 0 uvtime uvtime/2.5 1 0 80 

freqlin 2 0 uvtime uvfreqStart uvfreqStart 1 0


setsteps 2 uvtime/15 uvtime 2*uvtime 

ampgauss 2 uvtime 2*uvtime uvtime/2.5 -1 80 0

freqlin 2 uvtime 2*uvtime uvfreqStart uvfreqStart 0 0

%setsingle 2 2*rb2time 0 100 0 0 
%setsingle 2 0 100 5 0 0 

program 2

setsingle 3 0 clockamp clockfreq 0 0
setsingle 3 clockPov2 0 clockfreq 0 0
setsingle 3 clockPov2+uvtime clockamp clockfreq 0 0
setsingle 3 clockPov4+clockPov2+uvtime clockamp clockfreq 1 clockphase
setsingle 3 clockPov4+2*clockPov2+uvtime 0 clockfreq 0 0

program 3



% Software trigger for testing



%trigger
